@model HospitalManagementSystem.Models.Appointment

@{
    ViewData["Title"] = "Appointment Details";
}

<h2 class="mb-3">Appointment Details</h2>

<div class="card shadow-sm">
    <div class="card-body">
        <table class="table table-bordered">
            <tr>
                <th>Patient</th>
                <td>@(Model.Patient != null ? Model.Patient.Name : "No Patient Assigned")</td>
            </tr>
            <tr>
                <th>Doctor</th>
                <td>@(Model.Doctor != null ? Model.Doctor.Name : "No Doctor Assigned")</td>
            </tr>
            
            <tr>
                
                <th>@Html.DisplayNameFor(model => model.Status)</th>
                <td>@Html.DisplayFor(model => model.Status)</td>
            </tr>
            <tr>
                <th>Appointment Date & Time</th>
                <td>@Model.AppointmentDateTime.ToString("dd-MMM-yyyy hh:mm tt")</td>
            </tr>
            @if (!string.IsNullOrEmpty(Model.PrescriptionText))
            {
                <tr>
                    <th>Prescription</th>
                    <td class="text-success">@Model.PrescriptionText</td>
                </tr>
            }
        </table>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">
        <i class="bi bi-pencil"></i> Edit
    </a>
    <a asp-action="PrintPrescription" asp-route-id="@Model?.Id" class="btn btn-success">
        <i class="bi bi-file-earmark-medical"></i> Prescription
    </a>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to List
    </a>
</div>

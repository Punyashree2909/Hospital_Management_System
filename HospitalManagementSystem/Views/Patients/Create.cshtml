@model HospitalManagementSystem.Models.Patient

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Age" class="form-label"></label>
        <input asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Gender" class="form-label"></label>
        <input asp-for="Gender" class="form-control" />
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Disease" class="form-label"></label>
        <input asp-for="Disease" class="form-control" />
        <span asp-validation-for="Disease" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DoctorId" class="form-label">Assign Doctor</label>
        <select asp-for="DoctorId" class="form-control" asp-items="ViewBag.DoctorId">
            <option value="">-- Select Doctor --</option>
        </select>
        <span asp-validation-for="DoctorId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>

        @section Scripts {
    <partial name="_ValidationScriptsPartial" />
}